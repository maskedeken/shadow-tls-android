<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="Options">
    <EditTextPreference
        app:key="sni"
        app:persistent="false"
        app:title="SNI"
        app:useSimpleSummaryProvider="true"/>
    <EditTextPreference
        app:key="password"
        app:persistent="false"
        app:title="Password"
        app:useSimpleSummaryProvider="true"/>
    <EditTextPreference
        app:key="threads"
        app:persistent="false"
        app:title="Threads"
        app:useSimpleSummaryProvider="true"/>
    <CheckBoxPreference
        app:key="v3"
        app:persistent="false"
        app:title="Use V3 protocol"
        app:useSimpleSummaryProvider="true"/>
    <CheckBoxPreference
        app:key="fastopen"
        app:persistent="false"
        app:title="Enable TCP_FASTOPEN"
        app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>
</PreferenceScreen>